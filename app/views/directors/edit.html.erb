<h1>Edit director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(url:director_path(@director), method: :patch) do %>

  <div>
    <%= label_tag :name %>
    
    <%= label_field_tag :query_name, @director.name, id: "Name" %>

  </div>

  <div>
    
    <%= label_tag :dob %>
    
    <%= label_area_tag :query_dob, @director.dob, id: "Dob" %>

  </div>

  <button>
    Update director
  </button>
</form>
